{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "declaration": true,
    "declarationDir": "dist",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": false,
    "target": "ES2020",
    "module": "ES2020",
  },
  "exclude": [
    "node_modules",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
  ],
  "include": [
    "src/**/*.ts",
  ]
}